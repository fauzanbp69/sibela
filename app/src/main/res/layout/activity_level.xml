<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCF"
    tools:context=".MainActivity">

    <ImageView
        android:layout_marginTop="16dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/C12"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sibela2"
        android:id="@+id/C11"
        android:layout_marginBottom="30dp"
        />

    <TextView

        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/C12"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="Ayoo !! Taklukan level yang ada !"/>

    <Button
        android:id="@+id/C1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/C11"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="16dp"
        android:background="#666699"
        android:text="1"
        android:textSize="20sp" />

    <Button
        android:id="@+id/C2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/C11"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@id/C1"
        android:background="#666699"
        android:text="2"
        android:textSize="20sp" />

    <Button
        android:id="@+id/C3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/C11"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@id/C2"
        android:background="#666699"
        android:text="3"
        android:textSize="20sp" />

    <Button
        android:id="@+id/C4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/C1"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:background="#666699"
        android:text="4"
        android:textSize="20sp" />

    <Button
        android:id="@+id/C5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/C2"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@id/C4"
        android:background="#666699"
        android:text="5"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/C1"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@id/C5"
        android:background="#666699"
        android:text="6"
        android:textSize="20sp" />

</RelativeLayout>
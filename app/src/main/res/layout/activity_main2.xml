<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCF"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="@drawable/jos"
        android:id="@+id/R1"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:textSize="25sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/uyo"
        android:text=" 3 X 4 ?"
        android:textSize="50dp"
        android:layout_below="@id/R1"
        android:id="@+id/R2"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/anchor_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="onClick"
        android:text="CARA"
        tools:ignore="OnClick" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:showDividers="beginning|middle|end"
        android:layout_marginTop="10dp"
        android:id="@+id/radiogroup" />


    <RadioButton
        android:id="@+id/R3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/anchor_view"
        android:layout_marginLeft="16dp"
        android:onClick="onRadioButton"
        android:layout_marginTop="50dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/ratio1"
        android:button="@null"

        android:textColor="#000000"
        android:textSize="20sp"
        app:buttonTint="#000000"
        tools:ignore="OnClick" />

    <RadioButton
        android:layout_toRightOf="@id/R3"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="50dp"
        android:onClick="onRadioButton"
        android:layout_marginRight="16dp"
        android:button="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ratio2"
        android:textSize="20sp"
        app:buttonTint="#000000"
        android:layout_below="@id/anchor_view"
        android:id="@+id/R4"
        android:textColor="#000000"
        tools:ignore="OnClick" />

    <RadioButton
        android:layout_marginLeft="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ratio3"
        android:button="@null"
        android:onClick="onRadioButton"
        android:textSize="20sp"
        app:buttonTint="#000000"
        android:layout_toRightOf="@id/R4"
        android:layout_below="@id/anchor_view"
        android:id="@+id/R5"
        android:textColor="#000000"
        tools:ignore="OnClick" />
    <RadioButton
        android:layout_marginTop="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ratio4"
        android:button="@null"
        android:onClick="onRadioButton"
        android:textSize="20sp"
        app:buttonTint="#000000"
        android:layout_toRightOf="@id/R5"
        android:layout_below="@id/anchor_view"
        android:id="@+id/R6"
        android:textColor="#000000"
        tools:ignore="OnClick" />

</RelativeLayout>